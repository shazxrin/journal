<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="io.github.icedshytea.journal.utils.datetime.DateTimeHelper"/>
        <variable name="viewModel" type="io.github.icedshytea.journal.feature.editor.EditorViewModel"/>
    </data>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/mtrl_bottomappbar_height"
            android:scrollbarThumbVertical="@null">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="24dp"
                android:paddingRight="16dp"
                android:paddingBottom="32dp">

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/title"
                    style="?textAppearanceHeadline4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:focusable="true"
                    android:hint="Title"
                    android:nextFocusDown="@id/content"
                    android:text="@={viewModel.titleField}"
                    android:textStyle="bold"
                    app:fontFamily="@font/vollkorn" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dateTime"
                    style="?textAppearanceCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{DateTimeHelper.format(viewModel.dateTimeField)}"
                    app:fontFamily="@font/libre_baskerville" />

            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/content"
                    style="?textAppearanceBody1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent"
                    android:focusable="true"
                    android:gravity="start"
                    android:hint="Content"
                    android:inputType="textMultiLine"
                    android:text="@={viewModel.contentField}"
                    app:fontFamily="@font/libre_baskerville" />
        </LinearLayout>
    </ScrollView>
</layout>
