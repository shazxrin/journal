<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_graph" app:startDestination="@id/timelineScreenFragment">

    <fragment android:id="@+id/timelineScreenFragment"
              android:name="io.github.kosumorin.journal.feature.timeline.TimelineFragment"
              android:label="TimelineScreenFragment">
        <action
                android:id="@+id/timeline_open_editor_action"
                app:destination="@id/editor_nav_graph"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <navigation android:id="@+id/editor_nav_graph"
            app:startDestination="@id/editorScreenFragment">
        <argument
                android:name="entryId"
                app:argType="string"
                app:nullable="true" />
        <fragment
                android:id="@+id/editorTagListFragment"
                android:name="io.github.kosumorin.journal.feature.editor.tag.EditorTagListFragment"
                android:label="EditorTagListFragment">
            <action
                    android:id="@+id/action_editorTagListFragment_to_editorTagCreatorFragment"
                    app:destination="@id/editorTagCreatorFragment" />
        </fragment>
        <fragment
                android:id="@+id/editorScreenFragment"
                android:name="io.github.kosumorin.journal.feature.editor.EditorFragment"
                android:label="EditorScreenFragment">
            <argument
                    android:name="entryId"
                    app:argType="string"
                    app:nullable="true" />
            <action
                    android:id="@+id/action_editorScreenFragment_to_editorTagListFragment"
                    app:destination="@id/editorTagListFragment" />
        </fragment>
        <fragment
                android:id="@+id/editorTagCreatorFragment"
                android:name="io.github.kosumorin.journal.feature.editor.tag.EditorTagCreatorFragment"
                android:label="EditorTagCreatorFragment" />
    </navigation>
</navigation>